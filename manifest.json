{
    "manifest_version": 2,
    "name": "Big video detector",
    "version": "1.0",  
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "permissions": [
        "*://*/*",
        "webRequest",
        "activeTab",
        "tabs"
    ],
    "description": "Detect big video and open it in active tab"
}
